# $Id$
include $(TOP)/config/make.cfg

INCSUBDIRS	:= libcore
INCLUDES	:= $(wildcard $(foreach d,$(INCSUBDIRS),$(d)/*.[ch]))
DEST_INCLUDES	:= $(foreach f,$(INCLUDES),$(INCDIR)/$(f))

#MM
includes : $(DEST_INCLUDES)

$(INCDIR)/%.h : %.h
	$(CP) $< $@

$(INCDIR)/%.c : %.c
	$(CP) $< $@

#MM
setup :
	@$(FOR) dir in $(INCDIR)         \
		$(foreach f,$(INCSUBDIRS),$(INCDIR)/$(f)) \
	; do \
	   $(IF) [ ! -d "$$dir" ]; then $(MKDIR) "$$dir" ; else true ; fi ;\
	done

#MM
clean :
	-$(RM) $(INCDIR)
