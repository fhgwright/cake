#!/bin/sh
#
# This script print a "nice" date for a file. Just call it with the name
# if the file as parameter.
#

( /bin/ls -l $1 ; date ) | \
gawk ' \
    {				       \
	if (length($8)==4)             \
	{			       \
	    print $7". "$6" "$8;       \
	    getline;		       \
	}			       \
	else			       \
	{			       \
	    date=$7". "$6;             \
	    getline;		       \
	    print date" "$6;           \
	}			       \
}'
