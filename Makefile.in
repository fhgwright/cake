MMAKE=@MMAKE@
ifeq ($(MMAKE),)
MMAKE=./mmake
endif

all: $(MMAKE) genmf archtool
	$(MMAKE)

docs: $(MMAKE)
	$(MMAKE) .docs

mmake:
	cd tools/MetaMake; ./configure
	$(MAKE) -C tools/MetaMake
	cp tools/MetaMake/mmake .

genmf:
	$(MAKE) -C tools/genmf

archtool:
	$(MAKE) -C tools/archtools

clean:
	$(MMAKE) AROS.clean

.PHONY: all docs clean

